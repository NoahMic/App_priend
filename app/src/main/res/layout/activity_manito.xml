<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff2c2c"
        tools:context=".ManitoActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/manito_img"
            android:layout_width="260dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="260dp"
            android:layout_marginTop="100dp"
            android:layout_height="260dp"  >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/manito_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/manito_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="친구 1"
            android:textSize="50sp"
            android:textColor="#2bd647"
            android:fontFamily="@font/font3"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/manito_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/manito_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="님 입니다!"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/font3"
            android:layout_marginTop="16dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/manito_start_btn"
            android:layout_width="340dp"
            android:layout_height="60dp"
            app:cardCornerRadius="13dp"
            app:layout_constraintTop_toBottomOf="@id/manito_name_txt"
            android:layout_marginTop="60dp"
            app:cardBackgroundColor="#2c6bff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="시작하기"
                android:fontFamily="@font/font3"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>